/**
 * Instantantiates the CMISService using variables from the admin form
 *
 * @return CMISService
 */
function _civiclegislation_get_cmis()
{
    static $cmis;

    if (!$cmis) {
        libraries_load('chemistry');

        $cmis = new CMISService(
            variable_get('civiclegislation_url'),
            variable_get('civiclegislation_username'),
            variable_get('civiclegislation_password'),
            variable_get('civiclegislation_repositoryId')
        );
        $cmis->succinct = true;
    }
    return $cmis;
}

/**
 * Instantantiates the Solr Service using variables from the admin form
 *
 * @return Apache_Solr_Service
 */
function _civiclegislation_get_solr()
{
    require_once __DIR__.'/solr-php-client/Apache/Solr/Service.php';
    static $solr;

    if (!$solr) {
        $solr = new Apache_Solr_Service(
            variable_get('civiclegislation_solr_hostname'),
            variable_get('civiclegislation_solr_port'),
            variable_get('civiclegislation_solr_path')
        );
    }
    return $solr;
}